{
  "compilerOptions": {
    "strict": true,
    "target": "es2015",
    "module": "commonjs",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "pretty": false,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "include": [
    "lib/**/*.ts",
    "lib/**/*.tsx"
  ]
}
